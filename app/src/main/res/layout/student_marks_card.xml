<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="8dp"
    app:cardCornerRadius="8dp"
    android:layout_margin="10dp">
    <LinearLayout
        android:id="@+id/student_detailtop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/unit_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Computer Graphics"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/unit_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="Unit Code"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>
        <TextView
            android:id="@+id/total_mark"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Total Marks"
            android:gravity="center"
            android:textSize="18sp"
            android:textStyle="normal"
            />
        <TextView
            android:id="@+id/grade"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text=""
            android:layout_marginBottom="10dp"
            android:textSize="14sp"
            android:textColor="@android:color/darker_gray"/>

    </LinearLayout>

    <LinearLayout
        android:paddingTop="80dp"
        android:layout_below="@+id/student_detailtop"
        android:id="@+id/student_details"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/assign1_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/assign1_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ass1"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/assign1_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/assign2layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/assign2label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Ass2"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/assign2_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cat1layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/cat1label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cat1"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/cat1mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/cat2layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/cat2_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Cat2"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/cat2mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/exam_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical"
            android:padding="10dp">

            <TextView
                android:id="@+id/exam_label"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exam"
                android:gravity="center"
                android:textSize="18sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp"/>

            <TextView
                android:id="@+id/exam_mark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="0"
                android:textSize="14sp"
                android:textColor="@android:color/darker_gray"/>

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>
